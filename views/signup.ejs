<body>
    <div class="container" style="width: 500px; margin-top:7% ;">
        <form method="post">
            <h1>Create an account</h1>
            <div class="mb-3">
                <label for="useranme" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="password" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="are you student">
                <label class="form-check-label" for="exampleCheck1">Are you student?</label>
            </div>
            <div style=" height: 30px;">
                <p id="msg" class="btn-primary"> </p>
            </div>
            <button type="submit" class="btn btn-primary" onclick="check()">Create account</button>
        </form>
    </div>
